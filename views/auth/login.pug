extends ../layout/index


block text 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Property 
            span.font-normal Store
        h2.text-center.text-2xl.font-extrabold= page

        if errors 
            div(class="max-w-md mx-auto my-10")
                each error in errors 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div.mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="email here..." type="text" name="email")
                    div 
                        label.block.text-sm.uppercase.text-grey-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="password here..." type="text" name="password")
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-sx(href="/auth/register") Do not have account? Register
                        a.text-gray-500.text-sx(href="/auth/recover-password") Forgot Password?    
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Log in")
